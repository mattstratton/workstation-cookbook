[user]
	name = <%= node['workstation']['git']['name'] =%>
	email = <%= node['workstation']['git']['email'] =%>
[credential]
	helper = osxkeychain
[gpg]
[tag]
[commit]
    gpgsign = true
    template = ~/.gitmessage
[core]
	excludesfile = /Users/<%= node['workstation']['user'] =%>/.gitignore_global
	editor = code --wait
[diff]
    tool = default-difftool
[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE
